@import "../miniBadge/miniBadge.wxss";

.cmp_cinema_container {
  background-color: #36373B;
  margin: 20rpx 10rpx;
  padding: 15rpx 20rpx;
  border: 1rpx solid #444;
  border-radius: 5rpx;
}

.cmp_cinema_row {
  display: flex;
  flex-direction: row;
  margin: 10rpx 0;
}

.cmp_cinema_betwn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50rpx;
}

.cmp_cinema_image {
  width: 35rpx;
  height: 35rpx;
  margin-top: -15rpx;
}

.cmp_cinema_text_label {
  margin: 0 5rpx 10rpx;
  font-size: 0.8em;
  color: #aaa;
  padding: 0 10rpx;
  border: 1rpx solid #1d8fe1;
  border-radius: 5rpx;
}

.cmp_cinema_price {
  color: #f08519;
  font-size: 1.2em;
  margin: 0 5rpx 0 15rpx;
}

.cmp_cinema_stext {
  font-size: 0.8em;
  color: #aaa;
}

.cmp_cinema_stext_height {
  position: relative;
  top: 10rpx;
}

.cmp_cinema_ltext {
  font-size: 0.9em;
  color: #aaa;
}

.cmp_cinema_container_btm {
  margin: 20rpx 15rpx;
  border-bottom:1rpx solid #444;

}
