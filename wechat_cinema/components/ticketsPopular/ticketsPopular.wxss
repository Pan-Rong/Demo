@import "../badge/badge.wxss";

.move_list_item {
  position: relative;
  display: flex;
  flex-direction: row;
  margin: 60rpx auto;
  border-bottom: 1rpx solid #333;
}

.move_list_item_image {
  position: absolute;
  width: 160rpx;
  border-radius: 15rpx;
  height: 200rpx;
  top: -35rpx;
  left: 15rpx;
  background-color: #ccc;
}

.move_list_item_text {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 180rpx;
  background-color: #36373b;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.move_list_item_left {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 165rpx;
  margin-left: 190rpx;
}

.buy_tickets {
  margin-top: 70rpx;
  margin-right: 15rpx;
  height: 60rpx;
  width: 100rpx;
  color: #eee;
  border-radius: 10rpx;
  padding: 0;
  font-size: 30rpx;
  line-height: 60rpx;
}

.popular_film_grade_icon {
  width: 20rpx;
  height: 20rpx;
  margin: 0 5rpx;
}

.popular_film_textMax {
  font-size: 0.9em;
  width: 320rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  overflow: hidden;
}

.popular_presell {
  display: flex;
  flex-direction: row;
  align-items: center;
}
