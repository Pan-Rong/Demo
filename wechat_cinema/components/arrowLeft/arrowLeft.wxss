.scroll_top {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 10rpx;
}

.section__title {
  display: flex;
  flex-direction: row;
}

.section_title_right {
  display: flex;
  flex-direction: row;
  color: #aaa;
  font-size: 0.8em;
}

.hidden_mark {
  margin: 10rpx 10rpx 0 0;
  height: 20rpx;
  width: 0rpx;
}

.left_mark {
  border: 4rpx solid #1d8fe1;
  margin: 10rpx 10rpx 0 0;
  height: 20rpx;
  width: 0rpx;
}

.right_arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #fff;
  border-right: 3rpx solid #fff;
  transform: rotate(45deg);
  margin: 12rpx 15rpx 0;
}
